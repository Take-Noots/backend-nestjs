                    <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                    <select name="category" required
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="">Select Category</option>
                        <option value="artist">Artist/Band</option>
                        <option value="genre">Music Genre</option>
                        <option value="album">Album</option>
                        <option value="general">General Music</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="flex items-center space-x-2">
                    <input type="checkbox" name="isActive" id="isActive" checked
                        class="rounded border-gray-300 focus:ring-primary">
