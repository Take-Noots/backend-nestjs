    <!-- Toast Container -->
    <div id="toastContainer" class="fixed top-4 right-4 z-50 space-y-2"></div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
        <div class="bg-white rounded-lg p-6 flex items-center space-x-3">
            <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary"></div>
            <span class="text-gray-700">Loading...</span>
        </div>
    </div>

    <script>
        let selectedFanbases = [];

        // Mobile sidebar functionality
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const openSidebarBtn = document.getElementById('openSidebar');
        const closeSidebarBtn = document.getElementById('closeSidebar');

        function openSidebar() {
            sidebar.classList.add('show');
            sidebarOverlay.classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeSidebar() {
            sidebar.classList.remove('show');
            sidebarOverlay.classList.remove('show');
            document.body.style.overflow = '';
        }

        if (openSidebarBtn) {
            openSidebarBtn.addEventListener('click', openSidebar);
        }

        if (closeSidebarBtn) {
            closeSidebarBtn.addEventListener('click', closeSidebar);
        }

        if (sidebarOverlay) {
            sidebarOverlay.addEventListener('click', closeSidebar);
        }

        // Toast notifications
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 ${type === 'success' ? 'bg-green-500 text-white' :
                    type === 'error' ? 'bg-red-500 text-white' :
                        type === 'warning' ? 'bg-yellow-500 text-white' :
                            'bg-blue-500 text-white'
                }`;

            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'exclamation-triangle' : type === 'warning' ? 'exclamation' : 'info'}-circle"></i>
                <span>${message}</span>
                <button onclick="this.parentElement.remove()" class="ml-4 text-white/70 hover:text-white">
                    <i class="fas fa-times"></i>
                </button>
            `;

            toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.classList.add('show');
            }, 100);

            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        function showLoading() {
            document.getElementById('loadingOverlay').classList.remove('hidden');
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.add('hidden');
        }

        function confirmAction(message) {
            return confirm(message);
        }

        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.fanbase-checkbox');

            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });

            updateSelectedCount();
        }

        function updateSelectedCount() {
            const checkboxes = document.querySelectorAll('.fanbase-checkbox:checked');
            selectedFanbases = Array.from(checkboxes).map(cb => cb.value);

            document.getElementById('selectedCount').textContent = `${selectedFanbases.length} selected`;

            // Update select all checkbox state
            const allCheckboxes = document.querySelectorAll('.fanbase-checkbox');
            const selectAll = document.getElementById('selectAll');

            if (selectAll) {
                selectAll.checked = selectedFanbases.length === allCheckboxes.length;
                selectAll.indeterminate = selectedFanbases.length > 0 && selectedFanbases.length < allCheckboxes.length;
            }
        }

        async function toggleFanbaseStatus(fanbaseId) {
            // Get current status from button's data attribute
            const button = event.target.closest('button');
            const isCurrentlyActive = button.getAttribute('data-fanbase-active') === 'true';
            const action = isCurrentlyActive ? 'deactivate' : 'activate';

            const reason = prompt(`Enter reason to ${action} this fanbase:`);
            if (!reason) return;

            if (!confirmAction(`Are you sure you want to ${action} this fanbase?`)) return;

            try {
                showLoading();
                const response = await axios.post(`/admin/fanbases/${fanbaseId}/toggle-status`, {
                    isActive: !isCurrentlyActive,
                    reason,
                    actionBy: '<%= user ? user.id : "" %>'
                });

                if (response.status === 200) {
                    showToast(`Fanbase ${action}d successfully`, 'success');
                    setTimeout(() => window.location.reload(), 1000);
                }
            } catch (error) {
                showToast(`Failed to ${action} fanbase: ` + (error.response?.data?.message || error.message), 'error');
            } finally {
                hideLoading();
            }
        }

        async function deleteFanbase(fanbaseId) {
            const reason = prompt('Enter deletion reason:');
            if (!reason) return;

            if (!confirmAction('Are you sure you want to delete this fanbase? This action cannot be undone.')) return;

            try {
                showLoading();
                const response = await axios.delete(`/admin/fanbases/${fanbaseId}`, {
                    data: {
                        reason,
                        deletedBy: '<%= user ? user.id : "" %>'
                    }
                });

                if (response.status === 200) {
                    showToast('Fanbase deleted successfully', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                }
            } catch (error) {
                showToast('Failed to delete fanbase: ' + (error.response?.data?.message || error.message), 'error');
            } finally {
                hideLoading();
            }
        }

        async function viewFanbase(fanbaseId) {
            try {
                showLoading();
                const response = await axios.get(`/admin/fanbases/${fanbaseId}`);

                if (response.status === 200) {
                    const fanbase = response.data;
                    showFanbaseModal(fanbase);
                }
            } catch (error) {
                showToast('Failed to load fanbase details: ' + (error.response?.data?.message || error.message), 'error');
            } finally {
                hideLoading();
            }
        }

        function showFanbaseModal(fanbase) {
            const modal = document.getElementById('fanbaseModal');
            const content = document.getElementById('fanbaseModalContent');

            content.innerHTML = `
                <div class="space-y-6">
                    <div class="flex items-center space-x-4">
                        <div class="w-20 h-20 bg-gradient-to-br from-pink-400 to-red-500 rounded-xl flex items-center justify-center shadow-lg">
                            <i class="fas fa-heart text-white text-3xl"></i>
                        </div>
                        <div class="flex-1">
                            <h4 class="text-xl font-semibold text-gray-900">${fanbase.name}</h4>
                            <p class="text-gray-600 mb-2">${fanbase.category || 'General'}</p>
                            <div class="flex items-center space-x-4 text-sm">
                                <span class="flex items-center text-blue-500">
                                    <i class="fas fa-users mr-1"></i>
                                    ${fanbase.membersCount || 0} members
                                </span>
                                <span class="flex items-center text-green-500">
                                    <i class="fas fa-newspaper mr-1"></i>
                                    ${fanbase.postsCount || 0} posts
                                </span>
                                <span class="badge ${fanbase.isActive ? 'active' : 'pending'}">
                                    ${fanbase.isActive ? 'Active' : 'Inactive'}
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <h5 class="font-medium text-gray-900 mb-2">Description</h5>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-gray-700 leading-relaxed">
                                ${fanbase.description || 'No description provided'}
                            </p>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <h5 class="font-medium text-gray-900 mb-2">Fanbase Information</h5>
                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Fanbase ID:</span>
                                    <span class="font-mono text-gray-900">${fanbase.id}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Category:</span>
                                    <span class="text-gray-900">${fanbase.category || 'General'}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Created:</span>
                                    <span class="text-gray-900">${new Date(fanbase.createdAt).toLocaleDateString()}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Creator:</span>
                                    <span class="font-mono text-gray-900 text-xs">${fanbase.createdBy || 'Unknown'}</span>
                                </div>
                            </div>
                        </div>
                        
                        <div>
                            <h5 class="font-medium text-gray-900 mb-2">Community Stats</h5>
                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Members:</span>
                                    <span class="text-gray-900">${fanbase.membersCount || 0}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Posts:</span>
                                    <span class="text-gray-900">${fanbase.postsCount || 0}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Activity Level:</span>
                                    <span class="text-gray-900">${(fanbase.postsCount || 0) > 50 ? 'High' :
                    (fanbase.postsCount || 0) > 10 ? 'Medium' : 'Low'
                }</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Growth Rate:</span>
                                    <span class="text-gray-900">${(fanbase.membersCount || 0) > 100 ? 'Growing' : 'Stable'
                }</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex space-x-4 pt-4 border-t">
                        <button onclick="toggleFanbaseStatus('${fanbase.id}')" 
                                data-fanbase-active="${fanbase.isActive}"
                                class="flex-1 bg-${fanbase.isActive ? 'yellow' : 'green'}-500 text-white px-4 py-2 rounded-lg hover:bg-opacity-90 transition-colors">
                            <i class="fas fa-${fanbase.isActive ? 'pause' : 'play'} mr-2"></i>
                            ${fanbase.isActive ? 'Deactivate' : 'Activate'} Fanbase
                        </button>
                        <button onclick="deleteFanbase('${fanbase.id}')" class="flex-1 bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-opacity-90 transition-colors">
                            <i class="fas fa-trash mr-2"></i>
                            Delete Fanbase
                        </button>
                        <button onclick="closeFanbaseModal()" class="flex-1 bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-opacity-90 transition-colors">
                            <i class="fas fa-times mr-2"></i>
                            Close
                        </button>
                    </div>
                </div>
            `;

            modal.classList.remove('hidden');
        }

        function closeFanbaseModal() {
            document.getElementById('fanbaseModal').classList.add('hidden');
        }

        function showCreateFanbaseModal() {
            document.getElementById('createFanbaseModal').classList.remove('hidden');
        }

        function hideCreateFanbaseModal() {
            document.getElementById('createFanbaseModal').classList.add('hidden');
            document.getElementById('createFanbaseForm').reset();
        }

        async function bulkToggleStatus(action) {
            if (selectedFanbases.length === 0) {
                showToast('Please select fanbases first', 'warning');
                return;
            }

            const isActive = action === 'activate';
            const reason = prompt(`Enter reason to ${action} ${selectedFanbases.length} fanbases:`);
            if (!reason) return;

            if (!confirmAction(`Are you sure you want to ${action} ${selectedFanbases.length} fanbases?`)) return;

            try {
                showLoading();
                const response = await axios.post('/admin/fanbases/bulk-toggle', {
                    fanbaseIds: selectedFanbases,
                    isActive,
                    reason,
                    actionBy: '<%= user ? user.id : "" %>'
                });

                if (response.status === 200) {
                    showToast(`Fanbases ${action}d successfully`, 'success');
                    setTimeout(() => window.location.reload(), 1000);
                }
            } catch (error) {
                showToast(`Failed to ${action} fanbases: ` + (error.response?.data?.message || error.message), 'error');
            } finally {
                hideLoading();
            }
        }

        function exportFanbases() {
            const params = new URLSearchParams(window.location.search);
            exportData('fanbases', Object.fromEntries(params));
        }

        function exportData(type, params = {}) {
            showLoading();
            const queryString = new URLSearchParams(params).toString();
            const url = `/admin/${type}/export${queryString ? '?' + queryString : ''}`;

            // Create download link
            const link = document.createElement('a');
            link.href = url;
            link.download = `${type}-export-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            setTimeout(() => {
                hideLoading();
                showToast(`${type} data exported successfully!`, 'success');
            }, 1000);
        }

        // Create fanbase form submission
        document.getElementById('createFanbaseForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const formData = new FormData(e.target);
            const fanbaseData = {
                name: formData.get('name'),
                description: formData.get('description'),
                category: formData.get('category'),
                isActive: formData.has('isActive'),
                createdBy: '<%= user ? user.id : "" %>'
            };

            try {
                showLoading();
                const response = await axios.post('/admin/fanbases', fanbaseData);

                if (response.status === 201) {
                    showToast('Fanbase created successfully', 'success');
                    hideCreateFanbaseModal();
                    setTimeout(() => window.location.reload(), 1000);
                }
            } catch (error) {
                showToast('Failed to create fanbase: ' + (error.response?.data?.message || error.message), 'error');
            } finally {
                hideLoading();
            }
        });

        // Close modals when clicking outside
        document.getElementById('fanbaseModal').addEventListener('click', (e) => {
            if (e.target.id === 'fanbaseModal') {
                closeFanbaseModal();
            }
        });

        document.getElementById('createFanbaseModal').addEventListener('click', (e) => {
            if (e.target.id === 'createFanbaseModal') {
                hideCreateFanbaseModal();
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function () {
            updateSelectedCount();

            // Auto-refresh fanbase stats every 60 seconds
            setInterval(async () => {
                if (document.visibilityState === 'visible') {
                    try {
                        const response = await axios.get('/admin/api/fanbases-stats');

                        if (response.status === 200) {
                            const stats = response.data;
                            // Update stats in the overview cards
                            const activeElement = document.querySelector('.border-blue-500 .text-2xl');
                            const inactiveElement = document.querySelector('.border-yellow-500 .text-2xl');
                            const membersElement = document.querySelector('.border-green-500 .text-2xl');
                            const totalElement = document.querySelector('.border-purple-500 .text-2xl');

                            if (activeElement) activeElement.textContent = stats.active || 0;
                            if (inactiveElement) inactiveElement.textContent = stats.inactive || 0;
                            if (membersElement) membersElement.textContent = stats.totalMembers || 0;
                            if (totalElement) totalElement.textContent = stats.total || 0;
                        }
                    } catch (error) {
                        console.log('Failed to refresh fanbase stats:', error);
                    }
                }
            }, 60000);

            // Add fade-in animation to content
            const main = document.querySelector('main');
            if (main) {
                main.style.opacity = '0';
                main.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    main.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    main.style.opacity = '1';
                    main.style.transform = 'translateY(0)';
                }, 100);
            }
        });
    </script>
</body>

